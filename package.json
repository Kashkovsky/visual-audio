{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "lerna exec --scope @visual-audio/engine -- npm run dev",
    "prettier:lint-staged": "prettier --write",
    "eslint:lint-staged": "eslint --max-warnings 0 --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "lint-staged": "^11.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn eslint:lint-staged"
    ]
  }
}
