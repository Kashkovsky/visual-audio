{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "dev": "npm run dev:performer",
    "dev:performer": "lerna run --stream --concurrency 6 --no-sort --ignore @va/app-creator dev",
    "dev:creator": "lerna exec --parallel --ignore @va/app-performer -- npm run dev",
    "build:base": "lerna bootstrap --ignore @va/app-*",
    "build:performer": "npm run clean:build && npm run postinstall && lerna exec --scope @va/app-performer -- npm run build",
    "build:creator": "npm run clean:build && npm run postinstall && lerna exec --scope @va/app-creator -- npm run build",
    "clean:build": "lerna exec --parallel -- npm run clean:build && rm -rf .parcel-cache && rm -rf dist",
    "clean:packages": "lerna clean --yes",
    "clean": "npm run clean:build && npm run clean:packages",
    "prettier:lint-staged": "prettier --write",
    "eslint:lint-staged": "eslint --max-warnings 0 --fix",
    "prepare": "husky install",
    "deploy": "ts-node ./scripts/deploy",
    "gen:docs": "typedoc --entryPointStrategy packages .",
    "docs": "npx http-server docs"
  },
  "dependencies": {
    "@grammarly/focal": "^0.8.5",
    "fp-ts": "^2.11.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^6.6.7",
    "three": "^0.134.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.2.1",
    "@parcel/transformer-glsl": "^2.2.1",
    "@parcel/transformer-typescript-tsc": "^2.2.1",
    "@parcel/transformer-typescript-types": "^2.2.1",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.0",
    "parcel": "^2.2.1",
    "prettier": "^2.4.1",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn eslint:lint-staged"
    ]
  },
  "resolutions": {
    "set-value": "4.0.1"
  }
}
