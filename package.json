{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "dev": "npm i && lerna exec --scope @visual-audio/engine -- npm run dev",
    "build": "npm i && lerna exec --scope @visual-audio/engine -- npm run build",
    "prettier:lint-staged": "prettier --write",
    "eslint:lint-staged": "eslint --max-warnings 0 --fix",
    "prepare": "husky install",
    "deploy": "gh-pages -d packages/engine/dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn eslint:lint-staged"
    ]
  }
}
