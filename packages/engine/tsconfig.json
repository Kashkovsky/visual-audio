{
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "build",
    "paths": {
      "~*": ["./*"]
    },
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "target": "es6",
    "module": "ESNext",
    "importHelpers": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "incremental": true,
    "noImplicitAny": true,
    "lib": ["es2017.object", "es6", "es2016", "dom", "scripthost"]
  },
  "include": ["src/**/*"]
}
